mixin FooterBlog(href= "#", src="../images/img-blog1.png", title="Lorem ipsum dolor sit, amet consectetur adipisicing elit.", date ="Jan 9, 2021")
	a(href= href)
		.footer-blog
			img.footer-blog-image(src= src)
			.footer-blog-info
				h4.footer-blog-title= title
				span.footer-blog-date.text= date

mixin FooterImage(src= "https://images.unsplash.com/photo-1517102901587-6f4a9ad72db4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1486&q=80")
