mixin MenuItemLink (title, href= "#" )
	li.header-menu-item
					a.header-menu-link(href= href)=title

mixin HeaderBottomItem (number = "0", text = "text" )
	.header-bottom-item
				span.header-bottom-number= number
				span.header-bottom-text= text

mixin BlockBox(caption, title, desc)
	.block-box
		h3.block-box-caption= caption
		h2.block-box-heading= title
		if desc
			p.block-box-desc= desc

mixin AboutItem(src, classIcon, title, alt = "")
	.about-item
		img.about-image(src= src alt= alt)
		.about-content
			i(class= classIcon).about-icon
			span.about-title= title

mixin NumberItem(count, text)
	li.number-item
		h4.number-count= count
		span.number-text= text

mixin ServiceItem(src, title, desc, alt = "")
	li.service-item
				img.service-item-icon(src= src, alt= alt)
				.service-item-content
					h3.service-title= title
					p.service-desc= desc

mixin WedoItem (src, title, iconClass, content, active = "", alt = "")
	li.wedo-accordion(class= active)
					.wedo-accordion-header
						img.wedo-accordion-icon(src= src)
						h3.wedo-accordion-title= title
						i(class= iconClass).wedo-accordion-arrow
					.wedo-accordion-content
						p.wedo-accordion-text= content


mixin QuoteContent (src, desc, quote, alt = "")
	i.fal.fa-angle-left.quote-arrow.quote-arrow-left
	.quote-content
		.quote-icon
			img(src= src, alt= alt)
		.quote-info
			p.quote-desc= desc
			span.quote-author= quote
	i.fal.fa-angle-right.quote-arrow.quote-arrow-right