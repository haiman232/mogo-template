mixin StoryItem(src="../images/img-blog1.png", number = 15, text= "Jan", title="Lorem ipsum dolor, sit amet ", desc="Lorem ipsum dolor, sit amet consectetur adipisicing elit. Deserunt, alias debitis! Vel itaque explicabo eligendi qui iure saepe architecto corrupti, facere sint, maiores ipsam suscipit ab? Eius quia sint porro!",view= 542, comment= 18)
	li.story-item
		.story-media
			img.story-image(src= src)
			.story-date
				span.story-date-number= number
				span.story-date-text.text= text
		h3.story-title= title
		.story-desc
			p.story-desc-inner.text.text--normal= desc
		.story-meta
			.story-meta-item
				i.fa.fa-eye.story-meta-icon
				span.story-meta-number.text= view
			.story-meta-item
				i.fa.fa-comment.story-meta-icon
				span.story-meta-number.text= comment